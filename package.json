{
    "name": "gulp-dotax",
    "version": "1.0.0",
    "description": "A helper gulp plugin collection to help dota2 modding",
    "main": "./lib/index.js",
    "types": "./typings/index.d.ts",
    "files": [
        "lib/",
        "typings/",
        "src/",
        "test/"
    ],
    "engines": {
        "node": ">=14"
    },
    "scripts": {
        "build": "npm run build:typings && npm run build:lib",
        "build:lib": "tsc",
        "build:typings": "tsc --project ./tsconfig.json --target esnext --module commonjs --outDir ./typings --emitDeclarationOnly",
        "lint": "tslint -c tslint.json ./src/**/*.ts && tsc --noEmit",
        "prepublishOnly": "npm run build"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org",
        "access": "public"
    },
    "eslintConfig": {
        "extends": [
            "plugin:@typescript-eslint/recommended",
            "plugin:prettier/recommended"
        ],
        "parser": "@typescript-eslint/parser",
        "rules": {}
    },
    "prettier": {
        "semi": true,
        "singleQuote": true,
        "printWidth": 200,
        "tabWidth": 4
    },
    "keywords": [
        "gulpplugin",
        "dota2",
        "panorama"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/XavierCHN/gulp-dotax.git"
    },
    "bugs": {
        "url": "https://github.com/XavierCHN/gulp-dotax/issues"
    },
    "homepage": "https://github.com/XavierCHN/gulp-dotax#readme",
    "author": "Xavier Tseng",
    "license": "MIT",
    "devDependencies": {
        "@types/through2": "^2.0.36",
        "@types/vinyl": "^2.0.6",
        "typescript": "^2.7.2"
    },
    "dependencies": {
        "gulp": "^4.0.2",
        "node-xlsx": "^0.21.0",
        "pinyin-pro": "^3.10.1",
        "through2": "^4.0.2",
        "vinyl": "^2.2.1"
    }
}
